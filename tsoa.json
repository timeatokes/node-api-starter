{
  "controllerPathGlobs": ["modules/**/*.controller.ts"],
  "entryFile": "index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "basePath": "/api/v1",
    "outputDirectory": "dist",
    "specVersion": 3,
    "securityDefinitions": {
      "Bearer": {
          "type": "http",
          "name": "authorization",
          "in": "header",
          "scheme": "bearer"
      }
    }
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "dist"
  }
}